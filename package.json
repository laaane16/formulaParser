{
  "name": "formulex",
  "version": "0.0.49",
  "main": "build/index.js",
  "description": "Ast sql/js converter",
  "author": "laaane16 & SatoruFF",
  "license": "MIT",
  "types": "build/index.d.ts",
  "files": [
    "build"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/laaane16/formulaParser.git"
  },
  "engines": {
    "node": ">= 22.11 < 23"
  },
  "devDependencies": {
    "@eslint/js": "~9.24",
    "@jest/types": "^29.6.3",
    "@types/eslint__js": "~8.42",
    "@types/jest": "^29.5.14",
    "@types/luxon": "^3.6.2",
    "@types/node": "~22",
    "@typescript-eslint/parser": "~8.30",
    "eslint": "~9.25",
    "eslint-config-prettier": "~10.1",
    "eslint-plugin-prettier": "^5.2.6",
    "globals": "~16.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.0",
    "nodemon": "^3.1.9",
    "prettier": "~3.4",
    "rimraf": "~6.0",
    "ts-api-utils": "~2.1",
    "ts-jest": "^29.3.1",
    "ts-node": "^10.9.2",
    "typescript": "~5.8",
    "typescript-eslint": "~8.29"
  },
  "scripts": {
    "dev": "nodemon",
    "start": "node build/src/main.js",
    "clean": "rimraf coverage build tmp",
    "prebuild": "npm run lint",
    "build": "tsc -p tsconfig.json",
    "build:watch": "tsc -w -p tsconfig.json",
    "build:release": "npm run clean && tsc -p tsconfig.release.json",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest --coverage",
    "test:coverage": "vitest run unit --config config/vitest.config.ts --coverage.enabled --coverage.all",
    "format": "prettier \"{src,__{tests}__}/**/*.{ts,mts}\" --config .prettierrc --check",
    "format:fix": "prettier \"{src,__{tests}__}/**/*.{ts,mts}\" --config .prettierrc --write",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,js,md}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "volta": {
    "node": "22.12.0"
  },
  "dependencies": {
    "luxon": "^3.6.1"
  }
}
